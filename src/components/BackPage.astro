---
const { href } = Astro.props;
---

<a href={href} class="back-page" aria-label="Back to previous page">
  <box-icon name="arrow-back" class="icon"></box-icon>
</a>

<style>
  .back-page {
    position: absolute;
    top: 10px;
    left: 0px;
    width: 20px;
    height: 20px;
    cursor: pointer;
    z-index: 2;
  }
  .icon {
    width: 100%;
    height: 100%;
    fill: var(--body-secondary-color);
    transition: all 300ms ease-in-out;
  }

  :global(.dark) .icon {
    fill: var(--dark-body-secondary-color);
  }

  @media screen and (min-width: 768px) {
    .back-page {
      top: 70px;
      left: 0px;
      width: 25px;
      height: 25px;
    }
  }
</style>