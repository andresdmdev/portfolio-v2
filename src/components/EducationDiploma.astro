---
import type { EducationItem } from '../interfaces/educationDiplomaItem'

interface Props {
    diploma: EducationItem
}

const { diploma } = Astro.props;
---

<div class="education-item-container">
    <div class="education-icon" set:html={diploma.icon}></div>
    <div class="education-info">
        <span>{diploma.type}</span>
        <h3>{diploma.name}</h3>
        <p>{diploma.school} - {diploma.dateTimeUI}</p>
    </div>
</div>

<style>
    .education-item-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 5px;
    }

    .education-icon {
        fill: var(--secondary-color);
    }

    :global(.dark) .education-icon {
        fill: var(--dark-secondary-color);
    }

    .education-info {
        display: flex;
        flex-direction: column;
    }

    .education-info span {
        font-size: 10px;
        font-weight: bold;
        line-height: 12px;
    }

    .education-info h3 {
        font-size: 14px;
        font-weight: bolder;
        line-height: 18px;
        color: var(--ternary-color);
        margin: 1px 0 0 0;
    }

    :global(.dark) .education-info h3 {
        color: var(--dark-gold-color);
    }

    .education-info p {
        font-size: 11px;
        font-weight: bold;
        line-height: 18px;
        color: var(--secondary-color);
        margin: 0;
    }

    :global(.dark) .education-info p {
        color: var(--dark-cuaternary-color);
    }

    @media screen and (min-width: 636px) {
        .education-info h3 {
            font-weight: bold;
        }
    }
</style>