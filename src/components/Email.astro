---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="contact-info-email">
  <a class="first-container" aria-label="Open email integration">
    <span class="email-text" aria-valuetext={text}>@Email</span>
    <box-icon name="paper-plane" class="link" animation="tada-hover"></box-icon>
  </a>
  <button class="second-email-icon" aria-label="Copy email">
    <box-icon class="link" name="copy-alt" animation="tada-hover"></box-icon>
  </button>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sendEmailBtn = document.querySelectorAll(".first-container");
    const emailElement = document.querySelectorAll(".email-text");
    const copyEmailBtn = document.querySelectorAll(".second-email-icon");

    const email = emailElement[0]?.getAttribute("aria-valuetext") ?? "";

    if (sendEmailBtn && copyEmailBtn) {
      sendEmailBtn.forEach((e) => {
        e.addEventListener("click", () => {
          const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=${email}&su=Informacion&body='`;
          window.open(gmailUrl, "_blank");
        });
      });

      copyEmailBtn.forEach((e) => {
        e.addEventListener("click", () => {
          navigator.clipboard.writeText(email);
        });
      });
    }
  });
</script>

<style>
  .contact-info-email {
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    gap: 4px;
    font-family: var(--font-family);
  }

  .first-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 2px solid var(--body-secondary-color);
    border-radius: 8px 0 0 8px;
    box-sizing: border-box;
    transition: border 300ms ease-in-out;
    padding: 3px 8px;
    gap: 5px;
    cursor: pointer;
    background-color: var(--body-secondary-color);
    font-family: var(--font-family);
    transition: all 300ms ease-in-out;
  }
  .first-container:hover {
    scale: 1.1;
  }
  :global(.dark) .first-container {
    border-color: var(--body-secondary-color);
  }
  :global(.dark) .first-container:hover {
    border-color: var(--dark-body-primary-color);
  }
  .email-text {
    line-height: 0.7rem;
    color: var(--primary-color);
    font-size: var(--font-size-paragraph-body-small);
    letter-spacing: 0.025rem;
    font-weight: bolder;
    transition: all 300ms ease-in-out;
  }
  :global(.dark) .first-container:hover .email-text {
    color: var(--dark-body-primary-color);
  }
  .first-container .link {
    fill: var(--primary-color);
    width: 16px;
    height: 16px;
    margin-left: 2px;
    transition: all 300ms ease-in-out;
  }

  :global(.dark) .first-container:hover .link {
    fill: var(--dark-body-primary-color);
  }
  .second-email-icon {
    background-color: var(--body-secondary-color);
    border-radius: 0 8px 8px 0;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 300ms ease-in-out;
    border: 2px solid var(--body-secondary-color);
    cursor: pointer;
  }
  :global(.dark) .second-email-icon {
    border-color: var(--body-secondary-color);
  }
  :global(.dark) .second-email-icon:hover {
    border-color: var(--dark-body-primary-color);
  }
  .second-email-icon .link {
    fill: var(--primary-color);
    width: 16px;
    height: 16px;
    transition: all 300ms ease-in-out;
  }

  :global(.dark) .second-email-icon:hover .link {
    fill: var(--dark-body-primary-color);
  }

  @media (min-width: 768px) {
    .email-text {
      font-size: var(--font-size-paragraph-body);
    }

    .first-container {
      border: 3px solid var(--body-secondary-color);
      padding: 6px 12px;
      border-radius: 12px 0 0 12px;
    }

    .second-email-icon {
      border-radius: 0 12px 12px 0;
      border: 3px solid var(--body-secondary-color);
    }
  }
</style>
