<div class="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="last-line"></span>
</div>

<style>
    .hamburger {
        cursor: pointer;
        z-index: 3;
    }

    .hamburger-toogle {
        position: fixed;
    }

    .hamburger .line {
        display: block;
        width: 28px;
        height: 2px;
        margin-bottom: 8px;
        background-color: var(--secondary-color);
    }

    :global(.dark) .hamburger .line {
        background-color: var(--dark-secondary-color);
    }

    .last-line {
        display: block;
        width: 28px;
        height: 2px;
        margin-bottom: 0px;
        background-color: var(--secondary-color);
    }

    :global(.dark) .hamburger .last-line {
        background-color: var(--dark-secondary-color);
    }

    @media screen and (min-width: 636px) {
        .hamburger {
            display: none;
        }
    }
</style>