---
import "../interfaces/jobDescription";
import type { Job } from "../interfaces/jobDescription";
interface Props {
  job: Job;
}

const { job } = Astro.props;
---

<div class="job-description">
  <p class="job-date">{job.startDate} - {job.endDate}</p>
  <h4>{job.jobTitle}</h4>
  <p class="job-company">{job.company}</p>
  <p class="job-short-description" set:html={job.shortDescription} />
  <ul>
    {job.bullets.map((bullet) => <li>{bullet}</li>)}
  </ul>
</div>

<style>
  p {
    margin: 0;
    font-size: var(--font-size-paragraph-body);
    color: var(--body-secondary-color);
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 0.7px;
    font-family: var(--font-family);
  }
  :global(.dark) p {
    color: var(--dark-body-secondary-color);
  }

  .job-date {
    font-size: 0.6rem;
  }

  .job-company {
    margin-top: -3px;
    font-size: 0.6rem;
    font-style: italic;
  }

  .job-short-description {
    font-size: var(--font-size-paragraph-body);
    margin-top: 12px;
    line-height: 1.3rem;
    letter-spacing: 0.7px;
  }

  h4 {
    margin: 10px 0 0 0;
    font-size: 1.3rem;
    color: var(--title-secondary-color);
  }
  :global(.dark) h4 {
    color: var(--dark-title-secondary-color);
  }

  ul {
    margin: 5px 0 0 0;
    color: var(--body-secondary-color);
    font-size: var(--font-size-paragraph-body);
    font-weight: 400;
    line-height: 1.3rem;
    letter-spacing: 0.7px;
    font-family: var(--font-family);
  }
  :global(.dark) ul {
    color: var(--dark-body-secondary-color);
  }
  .job-description {
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 500px;
    margin: 30px auto 20px auto;
  }
  @media screen and (min-width: 768px) {
    .job-date {
      font-size: var(--font-size-paragraph-body);
      margin-bottom: 2px;
    }
    .job-company {
      font-size: var(--font-size-paragraph-body);
      margin-top: 1px;
    }
    .job-short-description {
      font-size: var(--font-size-paragraph-body-tablet);
      margin-top: 15px;
      margin-bottom: 15px;
      line-height: 30px;
      font-weight: 400;
    }
    h4 {
      font-size: 1.5rem;
    }

    .job-description {
      max-width: 650px;
      margin: 30px auto 50px auto;
    }

    ul {
      font-size: var(--font-size-paragraph-body-tablet);
      line-height: 30px;
      font-weight: 400;
    }
  }

  @media screen and (min-width: 1024px) {
    h4 {
      font-size: 2rem;
    }
  }
</style>
