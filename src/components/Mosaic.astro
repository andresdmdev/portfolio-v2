---
import type { Image } from '../interfaces/projectItem'
import "../styles/variables.css";

interface Props {
    items: Image[]
}

const { items } = Astro.props;
---

<div id="mosaic" class="mosaic-container">
    {
        items.slice(0,3).map((item, index) => {
            return (
                <div class={`item item-${index + 1}`}>
                    <img src={`../../images/${item.image}`} alt={item.altText} />
                </div>
            )
        })
    }
</div>

<style>
    .mosaic-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        width: 100%;
        margin: 25px 0 25px 0;
    }

    .item {
        background-color: var(--secondary-bg-color);
        border-radius: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bolder;
        overflow: hidden;
    }

    :global(.dark) .item {
        background-color: var(--dark-secondary-bg-color);
    } 

    .item-1 {
        grid-column: 1;
        grid-row: span 50;
    }

    .item-2 {
        grid-column: 2;
        grid-row: span 30;
    }

    .item-3 {
        grid-column: 2;
        grid-row: span 20;
    }

    img {
        object-fit: contain;
        max-width: 200px;
        transition: all 500ms ease-in-out;
    }

    img:hover {
        transform: scale(1.4);
    }
</style>