---
interface Props {
  text: string;
  url: string;
}

const { text, url } = Astro.props;
---

<a
  class="contact-info-cv"
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Open CV"
>
  <span class="cv-text">{text}</span>
  <box-icon class="link" name="link-external" animation="tada-hover"></box-icon>
</a>

<style>
  .contact-info-cv {
    border-radius: 8px;
    border: 2px solid var(--body-secondary-color);
    background-color: transparent;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: center;
    cursor: pointer;
    padding: 2px 8px;
    gap: 5px;
    transition: all 300ms ease-in-out;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .contact-info-cv:hover {
    border-color: var(--body-primary-color);
  }

  :global(.dark) .contact-info-cv:hover {
    border-color: var(--dark-body-primary-color);
  }

  .cv-text {
    line-height: 0.7rem;
    color: var(--body-secondary-color);
    font-size: 0.6rem;
    font-weight: bolder;
    transition: all 300ms ease-in-out;
  }

  .contact-info-cv:hover .cv-text {
    color: var(--body-primary-color);
  }

  :global(.dark) .contact-info-cv:hover .cv-text {
    color: var(--dark-body-primary-color);
  }

  .link {
    fill: var(--body-secondary-color);
    width: 20px;
    height: 20px;
    margin-left: 2px;
    transition: all 300ms ease-in-out;
  }

  .contact-info-cv:hover .link {
    fill: var(--body-primary-color);
  }

  :global(.dark) .contact-info-cv:hover .link {
    fill: var(--dark-body-primary-color);
  }

  @media (min-width: 636px) {
    .cv-text {
      font-size: 0.85rem;
    }

    .contact-info-cv {
      border: 3px solid var(--body-secondary-color);
      padding: 5px 12px;
      transition: all 300ms ease-in-out;
      text-decoration: none;
      border-radius: 12px;
    }
  }
</style>
