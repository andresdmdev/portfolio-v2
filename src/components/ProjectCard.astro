---
import type { ProjectItem } from "../interfaces/projectItem";

const { project } = Astro.props as { project: ProjectItem };
---

<div class={`project-card ${project.className}`}>
  <div class="project-card-content">
    <h3>{project.title}</h3>
    <p>{project.description}</p>
  </div>
  <div class="project-card-image"></div>
</div>

<style>
  .project-card {
    width: 100%;
    height: 450px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    background-color: var(--primary-color);
    border-radius: 30px;
    padding: 20px;
    margin-bottom: 100px;
  }

  @media screen and (min-width: 768px) {
    .grid-2 {
      grid-column: span 2;
    }

    .grid-4 {
      grid-column: span 4;
    }

    .grid-5 {
      grid-column: span 5;
    }

    .grid-6 {
      grid-column: span 6;
    }

    .grid-7 {
      grid-column: span 7;
    }

    .grid-8 {
      grid-column: span 8;
    }
  }
</style>
