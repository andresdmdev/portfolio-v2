---
import type { ProjectItem } from "../interfaces/projectItem";

const { project } = Astro.props as { project: ProjectItem };
---

<div class={`project-card ${project.className}`}>
  {
    project?.icons &&
      project.icons.map((icon) => {
        return (
          <img
            src={`../../images/${icon.src}`}
            class="project-icon"
            alt={icon.name}
            width="40"
            height="40"
          />
        );
      })
  }
  <div class="project-card-content">
    <h3>{project.title}</h3>
    <p>{project.description}</p>
  </div>
  <div class="project-card-image">
    <img />
  </div>
</div>

<style>
  .project-card {
    width: 100%;
    height: 450px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    background-color: white;
    border-radius: 30px;
    padding: 20px;
    margin-bottom: 100px;
    transition: all 0.3s ease-in-out;
    overflow: hidden;
    position: relative;
    cursor: pointer;
  }

  .project-icon {
    position: absolute;
    opacity: 0;
    top: 40px;
    right: 40px;
    width: 50px;
    height: 50px;
    transition: all 0.3s ease-in-out;
  }

  .project-card:hover {
    translate: 0px -3px;
    box-shadow: 0px 20px 40px -7px rgba(0, 0, 0, 0.12);
  }

  .project-card:hover .project-card-image {
    translate: 0px 10px;
  }

  .project-card-image {
    background-color: rgba(0, 0, 255, 0.353);
    width: 85%;
    height: 65%;
    border-radius: 15px 0 0 0;
    overflow: hidden;
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 1;
    transition: all 0.3s ease-in-out;
  }

  @media screen and (min-width: 768px) {
    .project-card {
      border-radius: 40px;
    }

    .project-card:hover .project-icon {
      opacity: 1;
      translate: 0px -10px;
    }

    .grid-2 {
      grid-column: span 2;
    }

    .grid-4 {
      grid-column: span 4;
    }

    .grid-5 {
      grid-column: span 5;
    }

    .grid-6 {
      grid-column: span 6;
    }

    .grid-7 {
      grid-column: span 7;
    }

    .grid-8 {
      grid-column: span 8;
    }
  }
</style>
