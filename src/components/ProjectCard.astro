---
import type { ProjectItem } from "../interfaces/projectItem";

const { project } = Astro.props as { project: ProjectItem };
---

<a class={`project-card ${project.className}`} href={`/project/${project.urlName}`}>
  <div class="project-card-icon-container">
    {
      project?.icon && (
        <img
          src={`../../images/${project.icon.src}`}
          class="project-icon"
          alt={project.icon.name}
          width="40"
          height="40"
        />
      )
    }
  </div>
  <div class="project-card-content">
    <p>{project.description}</p>
    <h3>{project.title}</h3>
  </div>
  <div class="project-card-image">
    <img />
  </div>
</a>

<style>
  .project-card {
    width: 100%;
    height: 450px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    background-color: white;
    border-radius: 30px;
    padding: 20px;
    margin-bottom: 10px;
    transition: all 0.3s ease-in-out;
    overflow: hidden;
    position: relative;
    cursor: pointer;
    text-decoration: none;
  }

  .project-card-content {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .project-card-content h3 {
    margin: 0;
    font-size: 2rem;
    color: var(--body-secondary-color);
  }

  .project-card-content p {
    margin-bottom: 0.35rem;
    color: var(--body-secondary-color);
    letter-spacing: 0.08rem;
    font-weight: 400;
  }

  .project-icon {
    position: absolute;
    opacity: 0;
    top: 40px;
    left: 40px;
    width: 50px;
    height: 50px;
    transition: all 0.3s ease-in-out;
  }

  .project-card:hover {
    translate: 0px -3px;
    box-shadow: 0px 20px 40px -7px rgba(0, 0, 0, 0.12);
  }

  :global(.dark) .project-card:hover {
    box-shadow: 0px 20px 40px -7px rgba(119, 190, 248, 0.35);
  }

  .project-card:hover .project-card-image {
    translate: 0px 10px;
  }

  .project-card-image {
    background-color: rgba(0, 0, 255, 0.353);
    width: 85%;
    height: 70%;
    border-radius: 15px 0 0 0;
    overflow: hidden;
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 1;
    transition: all 0.3s ease-in-out;
  }

  @media screen and (min-width: 768px) {
    .project-card {
      border-radius: 40px;
      margin-bottom: 60px;
    }

    .project-card:hover .project-icon {
      opacity: 1;
      translate: 0px -10px;
    }

    .grid-2 {
      grid-column: span 2;
    }

    .grid-4 {
      grid-column: span 4;
    }

    .grid-5 {
      grid-column: span 5;
    }

    .grid-6 {
      grid-column: span 6;
    }

    .grid-7 {
      grid-column: span 7;
    }

    .grid-8 {
      grid-column: span 8;
    }
  }
</style>
