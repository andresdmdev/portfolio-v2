---
import OpenToWork from "../../components/OpenToWork.astro";
import SectionLayout from "../../layouts/SectionLayout.astro";

interface Props {
  title: string;
  icon?: string;
  className: string;
  id: string;
  enableIcon?: boolean;
  iconPosition?: {
    top?: string;
    right?: string;
    rotate?: string;
  };
}

const {
  title,
  icon,
  className,
  id,
  enableIcon = false,
  iconPosition = {
    top: "-18px",
    right: "75px",
    rotate: "20deg",
  },
} = Astro.props;
---

<SectionLayout id={id} className={className}>
  <div class="title-wrapper">
    {
      enableIcon && (
        <span
          set:html={icon}
          class="icon"
          style={`
          top: ${iconPosition.top};
          right: ${iconPosition.right};
          rotate: ${iconPosition.rotate};
        `}
        />
      )
    }
    <h2 set:html={title} />
  </div>
</SectionLayout>

<style>
  h2 {
    text-align: center;
    font-size: var(--font-size-title);
    font-weight: 800;
    color: var(--title-primary-color);
    margin: 0;
  }

  :global(.dark) h2 {
    color: var(--dark-title-primary-color);
  }

  .title-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .icon {
    position: absolute;
    width: 25px;
    height: 25px;
    fill: var(--title-primary-color);
  }

  :global(.dark) .icon {
    fill: var(--dark-title-primary-color);
  }

  @media screen and (min-width: 768px) {
    h2 {
      margin-top: 35px;
      font-size: var(--font-size-title-tablet);
    }

    .icon {
      right: 240px !important;
      top: 20px !important;
    }
  }

  @media screen and (min-width: 1024px) {
    h2 {
      margin-top: 35px;
      font-size: var(--font-size-title-desktop);
    }
  }
</style>
