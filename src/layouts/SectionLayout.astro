---
interface Props {
  id: string;
  className?: string | null;
}

const { id, className } = Astro.props;
---

<section id={id} class={className}>
  <slot />
</section>

<style>
  section {
    margin-top: 100px;
  }

  .contact-info {
    margin-top: 15px;
  }

  .proyect-section {
    margin-top: 60px;
  }

  .profile {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 40px;
  }

  @media screen and (min-width: 636px) {
    section {
      margin-top: 120px;
    }

    .proyect-section {
      margin-top: 90px;
    }

    .profile {
      margin-top: 120px;
    }

    .contact-info {
      margin-top: 30px;
    }
  }
</style>
