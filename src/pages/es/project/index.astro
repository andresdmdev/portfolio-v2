---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Header from "../../../components/sections/Header.astro";
import TitleSection from "../../../components/sections/TitleSection.astro";
import { getLangFromUrl, getTranslation } from "../../../i18n/utils";
import Paragragh from "../../../components/Paragragh.astro";
import ContactInfo from "../../../components/sections/ContactInfo.astro";
import Project from "../../../components/sections/Project.astro";

const lang = getLangFromUrl(Astro.url);
const t = getTranslation(lang);
---

<BaseLayout pageTitle="Andres Marquez">
  <Header />
  <main>
    <TitleSection
      title={t("project").title as string}
      className="project-title-section"
      id="project-title-section"
    />
    <Paragragh
      text={t("project").description as string}
      className="project"
    />
    <ContactInfo className="project" />
    <Project />
  </main>
</BaseLayout>
